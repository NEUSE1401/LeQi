<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nav_background"
        android:orientation="horizontal"
        android:weightSum="5">
        <!-- 首页按钮 -->
        <LinearLayout
            android:id="@+id/bar_first_page_linear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/nav_item_padding"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center">

                <la.neu.leqi.customview.SquareImageView
                    android:id="@+id/bar_first_page_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/bar_first_page_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textColor="@color/navTextColor"
                    android:textSize="@dimen/nav_text_size" />
            </LinearLayout>

        </LinearLayout>
        <!-- 车铺按钮 -->
        <LinearLayout
            android:clickable="true"
            android:id="@+id/bar_bicycle_shop_linear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/nav_item_padding"
            android:weightSum="3">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center">

                <la.neu.leqi.customview.SquareImageView
                    android:id="@+id/bar_bicycle_shop_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cycling" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/bar_bicycle_shop_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车铺"
                    android:textColor="@color/navTextColor"
                    android:textSize="@dimen/nav_text_size" />
            </LinearLayout>

        </LinearLayout>
        <!-- 分享按钮 -->
        <LinearLayout
            android:id="@+id/bar_share_linear"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/nav_item_padding"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center">

                <la.neu.leqi.customview.SquareImageView
                    android:id="@+id/bar_share_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/share" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/bar_share_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:textColor="@color/navTextColor"
                    android:textSize="@dimen/nav_text_size" />
            </LinearLayout>

        </LinearLayout>
        <!-- 俱乐部按钮 -->
        <LinearLayout
            android:id="@+id/bar_club_linear"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/nav_item_padding"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center">

                <la.neu.leqi.customview.SquareImageView
                    android:id="@+id/bar_club_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/groups" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/bar_club_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="俱乐部"
                    android:textColor="@color/navTextColor"
                    android:textSize="@dimen/nav_text_size" />
            </LinearLayout>

        </LinearLayout>
        <!-- 活动按钮 -->
        <LinearLayout
            android:id="@+id/bar_activity_linear"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/nav_item_padding"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center">

                <la.neu.leqi.customview.SquareImageView
                    android:id="@+id/bar_activity_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/flag" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/bar_activity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动"
                    android:textColor="@color/navTextColor"
                    android:textSize="@dimen/nav_text_size" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
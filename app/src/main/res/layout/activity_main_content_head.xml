<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 广告栏-->
    <la.neu.leqi.customview.AdLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/vPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:fillColor="#FFFFFFFF"
            app:pageColor="#00000000"
            app:radius="3dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />
    </la.neu.leqi.customview.AdLayout>
    <!-- 活动栏-->
    <la.neu.leqi.customview.ActivityLayout
        android:id="@+id/activity_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_background"
        android:scaleType="fitXY"/>
    <!-- 分类栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/kinds_height"
        android:paddingTop="@dimen/kinds_padding_vertical"
        android:paddingBottom="@dimen/kinds_padding_vertical"
        android:weightSum="4">
        <!-- 旧物-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/kinds_item_padding"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center">
                <la.neu.leqi.customview.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#aaaaaa" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旧物"
                    android:textColor="@color/kindsTextColor"
                    android:textSize="@dimen/kinds_text_size" />
            </LinearLayout>

        </LinearLayout>
        <!-- 新闻-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/kinds_item_padding"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center">

                <la.neu.leqi.customview.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#aaaaaa" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新闻"
                    android:textColor="@color/kindsTextColor"
                    android:textSize="@dimen/kinds_text_size" />
            </LinearLayout>

        </LinearLayout>
        <!-- 推荐-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/kinds_item_padding"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center">

                <la.neu.leqi.customview.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#aaaaaa" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐"
                    android:textColor="@color/kindsTextColor"
                    android:textSize="@dimen/kinds_text_size" />
            </LinearLayout>

        </LinearLayout>
        <!-- 租车-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/kinds_item_padding"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center">

                <la.neu.leqi.customview.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#aaaaaa" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="租车"
                    android:textColor="@color/kindsTextColor"
                    android:textSize="@dimen/kinds_text_size" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
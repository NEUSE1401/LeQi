<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
       >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/logMainColor"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:src="@drawable/default_icon"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signature"
                android:text="fhjdsajhfa"/>
        </LinearLayout>


    </FrameLayout>


    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:clickable="true"
               android:id="@+id/change_nickname"
               android:background="#ffff"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <TextView
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="昵称"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="right">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginRight="10dp"
                       android:id="@+id/nickname"
                       android:text="hahah"/>
               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:clickable="true"
               android:id="@+id/change_sex"
               android:background="#ffff"
               android:layout_marginTop="2dp"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <TextView
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="性别"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="right">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginRight="10dp"
                       android:id="@+id/sex"
                       android:text="hahah"/>
               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:clickable="true"
               android:id="@+id/change_age"
               android:background="#ffff"
               android:layout_marginTop="2dp"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <TextView
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="生日"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="right">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginRight="10dp"
                       android:id="@+id/age"
                       android:text="hahah"/>
               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:clickable="true"
               android:id="@+id/change_district"
               android:background="#ffff"
               android:layout_marginTop="2dp"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <TextView
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="地区"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="right">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginRight="10dp"
                       android:id="@+id/district"
                       android:text="hahah"/>
               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:clickable="true"
               android:id="@+id/change_contact"
               android:background="#ffff"
               android:layout_marginTop="2dp"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <TextView
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="联系方式"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="right">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginRight="10dp"
                       android:id="@+id/contact_way"
                       android:text="hahah"/>
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
    </ScrollView>

</LinearLayout>
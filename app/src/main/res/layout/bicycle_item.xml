<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bicycle_item_height"
    android:orientation="horizontal"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/item_left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/content_left"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/content_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="@dimen/item_padding">

            <TextView
                android:id="@+id/title_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:textSize="@dimen/item_sub_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/current_price_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_sub_text_size"
                    android:textColor="@color/colorImportant" />
                <TextView
                    android:id="@+id/original_price_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/item_small_text_size"
                    android:textColor="@color/colorDefault" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/item_left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/content_right"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/content_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="@dimen/item_padding">

            <TextView
                android:id="@+id/title_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:textSize="@dimen/item_sub_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/original_price_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_sub_text_size"
                    android:textColor="@color/colorImportant" />
                <TextView
                    android:id="@+id/current_price_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/item_small_text_size"
                    android:textColor="@color/colorDefault" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
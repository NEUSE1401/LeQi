<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 导航栏背景（上边框）-->
    <item>
        <!-- 后背景-->
        <shape android:shape="rectangle">
            <solid android:color="#d5dbdd"/>
        </shape>
    </item>
    <item android:top="1dp">
        <!-- 前背景，下移1dp-->
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
        </shape>
    </item>
</layer-list>